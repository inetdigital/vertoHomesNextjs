{
  "id": "settings",
  "label": "Settings",
  "format": "custom",
  "repeatable": false,
  "status": true,
  "json": {
    "Main": {
      "name": {
        "type": "StructuredText",
        "config": {
          "label": "Name",
          "placeholder": "Name of your blog (e.g. your name)",
          "allowTargetBlank": false,
          "single": "heading1"
        }
      },
      "description": {
        "type": "StructuredText",
        "config": {
          "label": "Description",
          "placeholder": "Short description of your blog",
          "allowTargetBlank": false,
          "single": "paragraph"
        }
      },
      "profilePicture": {
        "type": "Image",
        "config": {
          "label": "Profile Picture",
          "constraint": {
            "width": 2000,
            "height": 2000
          },
          "thumbnails": []
        }
      },
      "newsletterDescription": {
        "type": "StructuredText",
        "config": {
          "label": "Newsletter Description",
          "placeholder": "Text above the sign up form",
          "allowTargetBlank": true,
          "multi": "heading1,paragraph,strong,em,hyperlink,list-item,o-list-item"
        }
      },
      "newsletterDisclaimer": {
        "type": "StructuredText",
        "config": {
          "label": "Newsletter Disclaimer",
          "placeholder": "Small text below sign up form",
          "allowTargetBlank": true,
          "multi": "paragraph,em,strong,hyperlink"
        }
      }
    },
    "Site Wide Statistics": {
      "homes_completed": {
        "type": "Number",
        "config": {
          "label": "Homes Completed",
          "placeholder": ""
        }
      },
      "homes_coming_soon": {
        "type": "Number",
        "config": {
          "label": "Homes Coming Soon",
          "placeholder": ""
        }
      },
      "co2_produced_by_each_home": {
        "type": "Number",
        "config": {
          "label": "CO2 produced by each home",
          "placeholder": ""
        }
      },
      "highest_epc_rating": {
        "type": "Text",
        "config": {
          "label": "Highest EPC rating",
          "placeholder": ""
        }
      }
    },
    "Verto Contact Details": {
      "office_address": {
        "type": "StructuredText",
        "config": {
          "label": "Office Address",
          "placeholder": "",
          "allowTargetBlank": true,
          "multi": "paragraph,preformatted,heading1,heading2,heading3,heading4,heading5,heading6,strong,em,hyperlink,image,embed,list-item,o-list-item,rtl"
        }
      },
      "phone_number": {
        "type": "Text",
        "config": {
          "label": "Phone Number",
          "placeholder": ""
        }
      },
      "email_address": {
        "type": "Text",
        "config": {
          "label": "Email Address",
          "placeholder": ""
        }
      },
      "office_hours": {
        "type": "StructuredText",
        "config": {
          "label": "Office Hours",
          "placeholder": "",
          "allowTargetBlank": true,
          "multi": "paragraph,preformatted,heading1,heading2,heading3,heading4,heading5,heading6,strong,em,hyperlink,image,embed,list-item,o-list-item,rtl"
        }
      },
      "instagram": {
        "type": "Link",
        "config": {
          "label": "Instagram",
          "placeholder": "",
          "allowTargetBlank": true,
          "select": null,
          "allowText": true
        }
      },
      "linkedin": {
        "type": "Link",
        "config": {
          "label": "LinkedIn",
          "placeholder": "",
          "allowTargetBlank": true,
          "select": null,
          "allowText": true
        }
      },
      "map_location": {
        "type": "GeoPoint",
        "config": {
          "label": "Map Location"
        }
      },
      "contact_welcome": {
        "type": "StructuredText",
        "config": {
          "label": "Contact welcome",
          "placeholder": "",
          "allowTargetBlank": true,
          "multi": "paragraph,preformatted,heading1,heading2,heading3,heading4,heading5,heading6,strong,em,hyperlink,image,embed,list-item,o-list-item,rtl"
        }
      }
    }
  }
}
